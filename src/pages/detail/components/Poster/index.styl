
.poster
  position: fixed
  height: 100%
  width: 100%
  top: 0
  left: 0
  background-color: rgba(#000,0.7)

  &-modal
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%,-50%)
    background: #ffffff
    border-radius: 10px

  &-canvas
    width: 100%
    height: 100%
