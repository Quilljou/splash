header-hegiht=420px

.header
  background-color: #f0f0f0
  position: absolute
  top: 0
  left: 0
  height: header-hegiht
  width: 100%
  background-position: center
  background-repeat: no-repeat
  background-size: cover

.body
  margin-top: header-hegiht
  position: absolute
  top: 0
  left: 0
  width: 100%

.userinfo
  background: #ffffff
  box-shadow: 0px 10px 10px rgba(#000, 0.1)
  width: 90%
  top: 0
  transform: translateY(-50%)
  position: absolute
  margin: auto
  background: #fff
  text-align: center
  border-radius: 20px
  padding-top: 120px
  padding-bottom: 36px
  position: relative

.avatar
  width: 160px
  height: 160px
  display: inline-block
  top: 0
  left: 50%
  border-radius: 50%
  position: absolute
  transform: translate(-50%, -50%)

.name
  font-weight: 600
  font-size: 40px
  line-height: 50px

.location
  font-size: 28px
  line-height: 1em
  margin-top: 20px

.list
  font-size: 56px
  width: 90%
  margin: auto
  color: #333
  font-weight: 350

  &-item
    margin-bottom: 40px
    position: relative
    text-indent: 0.8em

    &:after
      position: absolute
      content: ""
      bottom: 0
      left: 0
      height: 25%
      width: 100%
      background: #214AE1
      opacity: 0.4
      z-index: -1

.btn-feedback
  border: none
  border-width: 0
  border-color: transparent
  position: relative
  display: inline
  margin-left:auto
  margin-right:auto
  padding-left: 0
  padding-right: 0
  box-sizing: border-box
  font-size: inherit
  text-align: left
  text-decoration: none
  line-height: inherit
  border-radius: 0
  overflow:hidden
  color: inherit
  outline: none
  background: none
  background-color: transparent

  &:after
    border: none

