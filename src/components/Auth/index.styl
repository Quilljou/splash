.login_mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, .3);
    z-index: 99999;
}

.login_main {
    width: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
    padding: 0 30px;
    box-sizing: border-box;
    background-color: #fff;
    color: #333;

    &_header {
        display: flex;
        flex-wrap: nowrap;
        align-items: center;
        margin-top: 50px;

        .header_logo {
            width: 104px;
            height: 104px;
            transform: translateY(4px);
        }

        .header_text {
            font-size: 44px;
            padding-left: 20px;
        }
    }

    &_content {
        margin-top: 60px;
        .content_msg {
            font-size: 32px;
            line-height: 48px;
            white-space: normal;
        }

        .content_list {
            margin-top: 16px;
            &_item {
                display: flex;
                flex-wrap: nowrap;
                font-size: 14px;
                color: #999;
                line-height: 36px;

                &_dot {
                    display: inline-block;
                    line-height: 36px;
                    padding-right: 10px;
                }
            }
        }
    }

    &_confirm {
        margin-top: 90px;
    }

    &_reject {
        overflow: hidden;
        margin-top: 44px;
        margin-bottom: 52px;

        .reject_btn {
            float: right;
            font-size: 24px;
            line-height: 36px;
            color: #333;
        }
    }
}



.login_main_content .content_list_item {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: nowrap;
            flex-wrap: nowrap;
    font-size: 24px;
    color: #999;
    line-height: 36px;
}
