tab-height = 100px

.photos-item
    position: relative
    width: 100%
    margin-bottom: 30px

    // &-holder
    //   position: absolute
    //   width: 100%
    //   top: 0
    //   left: 0
    &-image
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      border: none
      transition: color .2s ease-in-out,opacity .2s ease-in-out;
    &-meta
      color: #fff
      position: absolute
      bottom: 10rpx
      right: 10rpx
      font-size: 20px
      text-align: right

    .author
      font-weight: bold
